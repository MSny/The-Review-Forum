<!-- Create new post form -->
<h2>Create new post</h2>
<form action = "/posts" method="POST">
<input style = "width: 250px" type='text' name='title' placeholder='title' >
<br>
<textarea name="post" style="margin: 0px; max-height: 350px; max-width: 312px;height: 250px;width: 250px;" placeholder='Write something'required> </textarea>
<br>
<input style = "width: 250px" type=text name='author' placeholder='author'>
<br>

<input type='hidden' name='category_id' value=<%= id %> >
<input type='hidden' name='vote' value='0'>

<button> Create</button>
<br>
<br>

</form>
<!-- UPvote Downvote buttons -->
<form action = "/category/<%= id %>?_method=PUT" method="POST">
<input type='hidden' name='Upvote' value="+1" >
<input name="upvote" type="submit" id="rateup" value="Upvote" />
</form>
<form action = "/category/<%= id %>?_method=PUT" method="POST">
<input type='hidden' name='Downvote' value="-1" >
<input name="downvote" type="submit" id="ratedown" value="Downvote"/>
</form>
<br>
<br>
